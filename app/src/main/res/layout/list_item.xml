<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="280dp"
            android:layout_height="285dp"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView_ItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ItemName"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textView_Month"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Month" />

            <TextView
                android:id="@+id/textView_Day"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Day" />

            <TextView
                android:id="@+id/textView_Hours"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Hours" />

            <TextView
                android:id="@+id/textView_Minutes"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Minutes" />

            <TextView
                android:id="@+id/textView_MusicName"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="MusicName" />

            <Button
                android:id="@+id/button_changeData"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="#ff7961"
                android:text="Change "
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_deleteData"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Delete "
                android:textSize="20dp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>